extends layout

block content
	h1= title
	ul.errors
			if errors
				each error, i in errors
					li.alert.alert-danger #{error.msg}
	form(method='post', action='/posts/edit', enctype='multipart/form-data')
		.form-group
			label Title:
			input.form-control(name='title', type='text', value='#{post.title}')
		.form-group
			label Body
			textarea.form-control(name='body', id='body') #{post.body}
		.form-group
			label Main Image
			input.form-control(name='mainimage', type='file')
		.form-group
			label Author
			select.form-control(name='author', value='#{post.author}')
				option(value='Brad Traversery') Brad Traversery
				option(value='John Doe') John Doe
		input.btn.btn-default(name='submit', type='submit', value='Save')
		script(src='/ckeditor/ckeditor.js')
		script
			| CKEDITOR.replace('body');
