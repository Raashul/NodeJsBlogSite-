html
  head
    title Login
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
  style.
    body{
    background: url('/images/uploads/download.jpg');
    background-repeat: no-repeat;
    background-size: 100% 100%;
    }
    .signupForm{
    width: 50%;
    height: 50%;
    margin: 0 auto;
    margin-top: 250px;
    }
    #signupButton{
    width: 100px;
    height: 40px;
    text-align: center;
    }
    .loginerror{
    margin-top: -50px;
    margin-bottom: 0px;
    list-style-type: none;
    }

  body
    nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle(data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand Node Js Blog Post
        .collapse.navbar-collapse.navbar-right
          form.navbar-form(method='post' action = '/login')
            .form-group
              input.form-control(type='text', name='username', placeholder='Username')
            .form-group
              input.form-control(type='password', name='password', placeholder='Password')
            input.btn.btn-primary(type='submit', name='submit', value='Log In')
    .container
      form.signupForm(method='post' action='/dashboard')
        if message
        each error, i in message
          ul.loginerror
            li.alert.alert-danger #{message}
        .form-group
          label(for='Username') Username
          input#username.form-control(type='text', placeholder='My name' name='username')
        .form-group
          label(for='email') Email
          input#username.form-control(type='email', placeholder='someone@gmai.com' name='email')
        .form-group
          label(for='Password') Password
          input#username.form-control(type='password', placeholder='Password' name='password')
        .form-group
          label(for='password2') Confirm Password
          input#username.form-control(type='password', placeholder='Confirm Password' name='password2')
        input#signupButton.btn.btn-success.form-control(type='submit', value='Sign Up', name='submit')
    script(src='js/jquery.js')
    script(src='js/bootstrap.min.js')
    script(type='text/javascript', src='js/jquery.cycle2.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
